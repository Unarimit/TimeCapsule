<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.unarimit.timecapsuleapp.ui.common.IconTextView
        android:id="@+id/statistic_bar_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/statistic_bar_item_name"
        android:layout_toEndOf="@id/statistic_bar_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/statistic_bar_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>
    <View
        android:id="@+id/statistic_bar_item_bar"
        android:layout_below="@id/statistic_bar_item_icon"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white_gray"/>


</RelativeLayout>