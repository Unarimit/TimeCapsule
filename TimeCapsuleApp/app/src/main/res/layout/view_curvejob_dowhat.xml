<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/view_curvejob_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/curvejob_hint_dowhat"/>

    <Button
        android:id="@+id/view_curvejob_confrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/view_curvejob_et"
        android:text="confrim"/>

    <Button
        android:id="@+id/view_curvejob_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_curvejob_et"
        android:layout_toStartOf="@id/view_curvejob_confrim"
        android:layout_marginEnd="10dp"
        android:text="cancel"/>

</RelativeLayout>