<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <com.unarimit.timecapsuleapp.ui.common.IconTextView
        android:id="@+id/curvejob_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/curvejob_item_icon"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_marginStart="5dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/task_taskclass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curvejob_item_icon"
        android:textColor="@color/gray"
        android:text="@string/depend_task_class"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/task_item_taskclass_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray"
        android:layout_below="@id/curvejob_item_icon"
        android:layout_toEndOf="@id/task_taskclass_tv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_gray"/>
</RelativeLayout>