<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/boardline_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/curvejob_item_item_dowhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:text="DO WHAT"/>

    <TextView
        android:id="@+id/curvejob_item_item_cost_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:textSize="12sp"
        android:text="预计"/>

    <TextView
        android:id="@+id/curvejob_item_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/curvejob_item_item_cost_tv"
        android:textSize="22sp"
        android:text="0:25"/>
    <TextView
        android:id="@+id/curvejob_item_item_epochlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_below="@id/curvejob_item_item_dowhat"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="#1 loop 2"/>


</RelativeLayout>